@inherits LayoutComponentBase

<CascadingValue Value="this">
    <MudThemeProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />
    <!-- #region Radzen-->
    <RadzenDialog />
    <RadzenNotification />
    <RadzenContextMenu />
    <RadzenTooltip />
    <!-- #region end Radzen-->
    
    <MudLayout style="height: 100vh;">
        <MudAppBar Color="Color.Default">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                           OnClick="@(DrawerToggle)" />

            @_pageTitlePrincipal @TitlePlus
            <MudSpacer />

            <LoginDisplay @ref="LoginDisplay" />
            
        </MudAppBar>
        <MudDrawer @bind-Open="@_drawerOpen" Width="300px" Class="py-3" Elevation="0">
            <MudDrawerHeader>
                <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" Size="Size.Large" Color="Color.Primary"></MudIcon>
            </MudDrawerHeader>
            <NavMenu />
            
        </MudDrawer>

        <MudMainContent style="background-color: #f4f4f4; height: 100vh;">
            <MudContainer style="flex-grow: 1;" MaxWidth="MaxWidth.ExtraExtraLarge">
                @Body
            </MudContainer>
        </MudMainContent>

       

    </MudLayout>
</CascadingValue>
@code
{


    public LoginDisplay LoginDisplay { get; set; }
    public string TitlePlus { get; set; } = "";
    bool _drawerOpen = true;
    string _pageTitle = "";
    string _pageTitlePrincipal = "Purchase Manager";

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;

    }

    protected override void OnInitialized()
    {
        //_clientVersion = typeof(Program).Assembly.GetName().Version.ToString();
    }



}